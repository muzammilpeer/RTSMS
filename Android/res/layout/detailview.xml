<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/widget49"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
android:background="@drawable/rtsmswallpaper_gradient_blue"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<LinearLayout
    android:id="@+id/statusbar"
    android:orientation="horizontal"
    android:background="#008E00"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <Button
    android:background="@drawable/rtsmsicon_bar"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_weight="0.1"
	/>
    <ImageView 
    android:id="@+id/alert_type"
    android:src="@drawable/alert"
	android:visibility="invisible"
    android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_weight="0.1"
	/>
    <TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text=" Detail View"
    android:layout_weight="1"
    android:gravity="center"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:id="@+id/homestatus_status"
    />
    <Button
    android:background="@drawable/back"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:onClick="previousbtnClickHandler"
	android:layout_weight="0.1"
	/>
    </LinearLayout>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
>
<TableRow>
<ScrollView 
	 android:scrollingCache="false"
	 android:smoothScrollbar="true"
	 android:scrollbarThumbVertical="@drawable/scrollbar"
	 android:scrollbarSize="15dp"
	 android:layout_weight="1"
   	 android:layout_width="wrap_content" 
	 android:layout_height="wrap_content">
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
xmlns:android="http://schemas.android.com/apk/res/android"
>

<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:layout_gravity="left"
	android:layout_weight="0.7"
	android:background="@drawable/rtsmswallpaper_gradient_blue"
	xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
 android:layout_weight="1"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:text="Screen Name"
 android:textStyle="bold"
 android:gravity="left"
 android:textColor="#FFFFFF" />
<TextView
 android:id="@+id/screenname"
 android:textSize="12dp"
 android:layout_weight="1"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:text="Don't Go"
 android:gravity="left"
 />
</LinearLayout>

<LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
android:gravity="center"
android:layout_weight="1"
android:background="@drawable/rtsmswallpaper_gradient"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
 android:layout_weight="1"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:text="Level"
 android:textStyle="bold"
 android:gravity="center"
 android:textColor="#FFFFFF" />
<TextView
 android:id="@+id/risklevel"
 android:layout_weight="1"
 android:textSize="12dp"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:text="2.0+"
 android:textColor="#FFFFFF"
 android:gravity="center"
 />
</LinearLayout>

<LinearLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
android:layout_gravity="right"
android:background="@drawable/rtsmswallpaper_gradient_blue"
android:layout_weight="0.7"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
 android:layout_weight="1"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:text="Reported By"
 android:textStyle="bold"
 android:gravity="right"
 android:textColor="#FFFFFF" />
<TextView
 android:id="@+id/reportedby"
 android:layout_weight="1"
 android:textSize="12dp"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:text="Geo News"
 android:gravity="right"
 />
</LinearLayout>

</LinearLayout>
 <LinearLayout
android:id="@+id/widget50"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="@drawable/rtsmswallpaper_gradient_blue"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
 android:id="@+id/eventname"
 android:layout_weight="1"
 android:layout_width="fill_parent"
 android:layout_height="72dp"
 android:text="Detail View"
 android:textStyle="bold"
 android:paddingTop="20dp"
 android:gravity="left"
 android:textSize="20dp"
 android:textColor="#FAC905" />
<ImageView
	android:id="@+id/eventicon"
	android:src="@drawable/icon"
	android:drawingCacheQuality="auto"
	android:layout_width="72dp"
	android:layout_height="72dp"
	/>
</LinearLayout>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="25dp"
android:orientation="horizontal"
android:background="@drawable/rtsmswallpaper_gradient_green"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
 android:paddingTop="2dp"
 android:id="@+id/locationname"
 android:layout_weight="0.5"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:textStyle="bold"
 android:textColor="#FFFFFF"
 android:text="Malir,Karachi,Pakistan"
/>
<TextView
 android:paddingTop="2dp"
 android:id="@+id/distance"
 android:layout_weight="1"
 android:layout_width="fill_parent"
 android:layout_height="wrap_content"
 android:text="45.2 Mi"
 android:gravity="right"
 android:textStyle="bold"
 android:textColor="#FFFFFF" />
</LinearLayout>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<ScrollView 
 android:id="@+id/ScrollView0001" 
 android:scrollingCache="false"
 android:smoothScrollbar="true"
 android:scrollbarThumbVertical="@drawable/scrollbar"
 android:scrollbarSize="15dp"
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content">
<TextView 
  	android:text="text ..."
  	android:singleLine="false" 
  	android:id="@+id/description"
  	android:layout_weight="1"
  	android:textColor="#FFFFFF"
  	android:layout_width="fill_parent" 
  	android:layout_height="wrap_content">
</TextView>
</ScrollView>
</LinearLayout>
</LinearLayout>
</ScrollView>
</TableRow>
</TableLayout>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="50dp"
android:orientation="horizontal"
android:layout_gravity="bottom"
android:background="@drawable/rtsmswallpaper_gradient_blue"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<Button
android:id="@+id/webview"
android:layout_width="fill_parent"
android:layout_height="50dp"
android:text="Web View"
android:layout_weight="1"
android:onClick="mapsbtnClickHandler"
/>
<TextView
android:id="@+id/timeago"
android:layout_width="fill_parent"
android:gravity="right"
android:layout_height="wrap_content"
android:layout_weight="1"
android:text="45 Mins ago" />
</LinearLayout>
</LinearLayout>
